<div class="row">
    <h2 class="col-md-3 col-md-offset-2">News du site</h2>
</div>

{% for news in newsList %}
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">{{ news.title }}</h3>
            </div>
            <div class="panel-body">{{ news.text|nl2br }}</div>
            <div class="panel-footer">
                {{ tr('modules.news.by') }} <b>{{ news.author.login }}</b>
                {{ tr('modules.news.the') }} <b>{{ news.post_date|date(tr('general.dateformat')) }}</b>
                - {{ tr('modules.news.cat') }} <b>{{ news.category.name }}</b>
            </div>
        </div>
    </div>
</div>
{% endfor %}
