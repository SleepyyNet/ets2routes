{
  "index": {
    "path": "/",
    "controller": "App:Default:index"
  },
  "user_register": {
    "path": "/user/register",
    "controller": "App:User:register"
  },
  "user_tos": {
    "path": "/user/tos",
    "controller": "App:User:tos"
  },
  "user_validation": {
    "path": "/user/validation/{code}",
    "controller": "App:User:validation",
    "requirements": {
      "code": "[a-f0-9]{32}"
    },
    "defaults": {
      "code": null
    }
  },
  "user_login": {
    "path": "/user/login",
    "controller": "App:User:login"
  },
  "user_disconnect": {
    "path": "/user/disconnect",
    "controller": "App:User:disconnect"
  }
}
