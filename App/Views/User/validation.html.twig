{% extends '@App/Base/layout.html.twig' %}

{% block title 'Validation utilisateur' %}

{% block body %}
    <div class="row">
        <h2 class="col-md-3 col-md-offset-2">{{ tr('form.user.h2.validation') }}</h2>
    </div>

    <div class="row">
        <div class="col-md-3 col-md-offset-2">{{ tr('form.user.validation') }}</div>
    </div>

    <div class="row">
        <form action="{{ path('user_validation') }}" method="post" class="col-md-3 col-md-offset-2">
            <div class="form-group">
                <label for="code">{{ tr("form.user.code") }}</label>
                <input type="text" name="code" value="" maxlength="255" class="form-control" id="code" required>
            </div>

            <button type="submit" class="btn btn-primary">{{ tr('form.user.validate') }}</button>
        </form>
    </div>
{% endblock %}
