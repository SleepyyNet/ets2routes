{% extends '@App/Base/layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row">
        <h2 class="col-md-3 col-md-offset-2">Connexion utilisateur</h2>
    </div>

    <div class="row">
        <div class="col-md-3 col-md-offset-2">{{ tr('form.user.connection.msg') }}</div>
    </div>

    <div class="row">
        <form action="{{ path('user_login') }}" method="post" class="col-md-3 col-md-offset-2">
            <div class="form-group">
                <label for="login">{{ tr("form.user.login") }}</label>
                <input type="text" name="login" value="{{ login }}" maxlength="255" class="form-control" id="login" required>
            </div>

            <div class="form-group">
                <label for="password">{{ tr("form.user.password") }}</label>
                <input type="password" name="password" maxlength="50"
                       class="form-control" id="password" required>
            </div>

            <button type="submit" class="btn btn-primary">{{ tr('form.user.connection.fields.validate') }}</button>
        </form>
    </div>
{% endblock %}
