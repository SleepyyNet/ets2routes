{% extends '@App/Base/layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="row">
        <h2 class="col-md-3 col-md-offset-2">Inscription</h2>
    </div>

    <div class="row">
        <div class="col-md-3 col-md-offset-2">{{ tr('form.user.msg') }}</div>
    </div>

    <div class="row">
        <form action="{{ path('user_register') }}" method="post" class="col-md-3 col-md-offset-2">
            <div class="form-group">
                <label for="login">{{ tr("form.user.login") }}</label>
                <input type="text" name="login" value="{{ login }}" maxlength="255" class="form-control" id="login">
            </div>

            <div class="form-group">
                <label for="password">{{ tr("form.user.password") }}</label>
                <input type="password" name="password" maxlength="50"
                       class="form-control" id="password">
            </div>

            <div class="form-group">
                <label for="mail">{{ tr("form.user.mail") }}</label>
                <input type="mail" name="mail" value="{{ mail }}" maxlength="255"
                       class="form-control" id="mail">
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" name="tos" id="tos"> {{ tr('form.user.check') }}
                        <a href="{{ path('user_tos') }}">{{ tr('form.user.tos') }}</a>
                </label>
            </div>

            <button type="submit" class="btn btn-primary">{{ tr('form.user.register') }}</button>
        </form>
    </div>
{% endblock %}

